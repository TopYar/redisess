{
  "compilerOptions": {
    "incremental": false,
    "module": "commonjs",
    "target": "es2017",
    "declaration": true,
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "removeComments": false,
    "noLib": false,
    "strict": true,
    "strictNullChecks": false,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
